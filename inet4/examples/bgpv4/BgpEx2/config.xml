<?xml version="1.0" encoding="ISO-8859-1"?>
<BGPConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="BGP.xsd">
	<TimerParams>
        <connectRetryTime> 120 </connectRetryTime>
        <holdTime> 180 </holdTime>
        <keepAliveTime> 60 </keepAliveTime>
        <startDelay> 15 </startDelay>
    </TimerParams>
    
    <Devices>
    	<Router name="R1" id="100.0.1.1">
    		<Interfaces>
    			<Interface id="eth0">
    				<Ipv4 address="10.0.12.1" netmask="255.255.255.252" />
    				<Ipv6 address="fd00:12:12::0/127" />	
    			</Interface>
    		</Interfaces>
    		<Bgp as="100">
    			<Address-family id="Ipv4">
    				<Neighbor Addr="10.0.12.2" remote-as="200" />
    			</Address-family>
    			<Address-family id="Ipv6">
    				<Neighbor Addr="fd00:12:12::1" remote-as="200" />
    			</Address-family>
    		</Bgp>
    	</Router>
    	
    	<Router name="R2" id="200.0.2.1">
    		<Interfaces>
    			<Interface id="eth0">
    				<Ipv4 address="10.0.12.2" netmask="255.255.255.252" />
    				<Ipv6 address="fd00:12:12::1/127" />
    			</Interface>
    		</Interfaces>   
    		<Bgp as="200">
    			<Address-family id="Ipv4">
    				<Neighbor Addr="10.0.12.1" remote-as="100" />
    			</Address-family>
    			<Address-family id="Ipv6">
    				<Neighbor Addr="fd00:12:12::0" remote-as="100" />
    			</Address-family>	
    		</Bgp>		
    	</Router>
    
    </Devices>
              
 </BGPConfig> 